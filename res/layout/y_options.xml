
<LinearLayout android:id="@+id/y_LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="top|fill_horizontal" android:orientation="vertical"
	android:background="#000055">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/y_Title" android:text="Game of Y Menu"
		android:textSize="12pt" android:textStyle="bold" android:textColor="#ffe303"
		android:layout_marginTop="15dip"></TextView>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/y_BoardSize" android:layout_width="fill_parent"
		android:layout_marginTop="30dip">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/y_PickOuterTriangles"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="vertical" android:layout_marginLeft="35dip">
			<TextView android:id="@+id/y_TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Inner Triangles" android:textStyle="bold"></TextView>
			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="10dip"
				android:id="@+id/y_innerSpinner"></Spinner>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/y_PickInnerTriangles"
			android:layout_gravity="right" android:orientation="vertical"
			android:layout_marginLeft="50dip">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/y_outertriangles"
				android:text="Outer Triangles" android:textStyle="bold"></TextView>
			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="10dip"
				android:layout_marginLeft="5dip" android:id="@+id/y_outerSpinner"></Spinner>

		</LinearLayout>
	</LinearLayout>












	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:id="@+id/y_Player1options" android:layout_marginLeft="10dip"
		android:layout_marginTop="25dip">
		<RadioGroup android:id="@+id/y_RadioGroup01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/y_Player1"
				android:text="Player 1:" android:textSize="8pt" android:textColor="#ffe303"></TextView>
			<RadioButton android:id="@+id/y_RadioButton01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Human" android:layout_marginLeft="5dip" android:checked="true"></RadioButton>
			<RadioButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/y_RadioButton02"
				android:text="Computer" android:layout_marginLeft="5dip"></RadioButton>
		</RadioGroup>



	</LinearLayout>







	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/y_Player2options"
		android:layout_marginLeft="10dip" android:layout_marginTop="20dip">
		<RadioGroup android:id="@+id/y_RadioGroup02"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/y_Player2"
				android:text="Player 2: " android:textSize="8pt" android:textColor="#ffe303"></TextView>
			<RadioButton android:id="@+id/y_RadioButton03"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Human" android:checked="true"></RadioButton>
			<RadioButton android:id="@+id/y_RadioButton04"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Computer" android:layout_marginLeft="5dip"></RadioButton>
		</RadioGroup>





	</LinearLayout>

	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Play Game!"
		android:id="@+id/y_playButton" android:layout_gravity="center_horizontal"
		android:layout_marginTop="40dip"></Button>

</LinearLayout>
